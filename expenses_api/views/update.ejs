<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Expense - GITA / TATO</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <h1>Edit Expense</h1>
    <form action="/expenses/update/<%= expense.id %>" method="POST">
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= expense.title %>"
        required
      /><br />
      <label for="amount">Amount:</label>
      <input
        type="number"
        id="amount"
        name="amount"
        value="<%= expense.amount %>"
        required
      /><br />
      <label for="date">Date:</label>
      <input
        type="date"
        id="date"
        name="date"
        value="<%= expense.date %>"
        required
      /><br />
      <button type="submit">Update Expense</button>
    </form>
    <a href="/expenses">Back to List</a>
  </body>
</html>
