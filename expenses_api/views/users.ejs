<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Management</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>User Management</h1>
      <a href="/users/create" class="btn">Add New User</a>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <a href="/users/<%= user._id %>" class="btn details">View</a>
                <a href="/users/<%= user._id %>/edit" class="btn edit">Edit</a>
                <form action="/users/delete/<%= user._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn delete">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
